{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++:build",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-I/opt/homebrew/Cellar/ffmpeg/7.0.1/include",
                "-L/opt/homebrew/Cellar/ffmpeg/7.0.1/lib",
                "-lavformat",
                "-lavutil",
                "-lavcodec",
                "-lswscale"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}